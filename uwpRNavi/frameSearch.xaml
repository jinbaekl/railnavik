<Page
    x:Class="uwpRNavi.frameSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpRNavi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <SymbolIcon Symbol="Volume" Margin="10"/>
            <HyperlinkButton x:Name="hbButton" Grid.Column="1" Content="로드 중..." NavigateUri="http://zermoth.net/railroad/logis/Notice.aspx?category=24"/>
        </Grid>
        <AutoSuggestBox x:Name="asbFrom" Grid.Row="1" Margin="10" Padding="10"/>
        <AutoSuggestBox x:Name="asbTo" Grid.Row="2" Margin="10" Padding="10"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOption" HorizontalAlignment="Stretch" Margin="10" Padding="10" Background="Transparent" Grid.Column="0">
                <Button.Flyout>
                    <Flyout Placement="Bottom">
                        <StackPanel>
                            <ComboBox x:Name="cbOption" HorizontalAlignment="Stretch" Margin="10" Padding="10" SelectedIndex="0" SelectionChanged="cbOption_SelectionChanged">
                                <ComboBoxItem>출발 시각</ComboBoxItem>
                                <ComboBoxItem>도착 시각</ComboBoxItem>
                                <ComboBoxItem>첫차</ComboBoxItem>
                                <ComboBoxItem>막차</ComboBoxItem>
                            </ComboBox>
                            <DatePicker x:Name="dpDate" HorizontalAlignment="Stretch" Margin="10"/>
                            <TimePicker x:Name="tpTime" HorizontalAlignment="Stretch" Margin="10"/>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <SymbolIcon Symbol="Setting"/>
            </Button>
            <Button x:Name="btnSearch" HorizontalAlignment="Stretch" Margin="10" Padding="10" Background="Transparent" Grid.Column="1">
                <SymbolIcon Symbol="Find"/>
            </Button>
        </Grid>
        <Pivot Grid.Row="4" x:Name="pvSearchResult">
            <PivotItem Header="빠름">
                <Grid/>
            </PivotItem>
            <PivotItem Header="편함">
                <Grid/>
            </PivotItem>
            <PivotItem Header="짧음">
                <Grid/>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
